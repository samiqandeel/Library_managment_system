@model List<CartItemViewModel>

@{
    ViewData["Title"] = "Shopping Cart";
    decimal TotalAll = Model?.Sum(i => i.total) ?? 0;
}

<h2 class="text-center mb-4">🛒 Shopping Cart</h2>

@if (Model == null || !Model.Any())
{
    <div class="alert alert-info text-center">
        Your cart is empty.
    </div>
}
else
{
    <table class="table table-bordered text-center align-middle">
        <thead class="table-dark">
            <tr>
                <th>Book Title</th>
                <th>Price</th>
                <th>Quantity</th>
                <th>Total</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Titel</td>
                    <td>@item.Price.ToString("C")</td>
                    <td>@item.Quantity</td>
                    <td>@item.total.ToString("C")</td>
                    <td>
                        <a asp-controller="Cart" asp-action="Removefromcart" asp-route-bookid="@item.bookid" class="btn btn-danger btn-sm">
                            Remove
                        </a>
                    </td>
                   

                </tr>
            }
        </tbody>
        <tfoot class="table-light">
            <tr>
                <td colspan="3" class="text-end fw-bold">TotalAll:</td>
                <td class="fw-bold">@TotalAll</td>
            </tr>
        </tfoot>
    </table>

    <div class="text-center mt-3">
        <a asp-controller="Cart" asp-action="ClearCart" class="btn btn-danger">Clear Cart</a>
        <a asp-controller="Books" asp-action="index" class="btn btn-outline-dark mt-auto">Continue Shoping</a>
        <a asp-controller="Cart" asp-action="Checkout" class="btn btn-success">Checkout</a>
    </div>
}

