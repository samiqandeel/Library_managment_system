@model List<Order>

<div class="container mt-5">
    <h2 class="mb-4 text-center">My Orders</h2>

    @if (Model == null || !Model.Any())
    {
        <div class="alert alert-info text-center">
            There Are No Orders
        </div>
    }
    else
    {
        foreach (var order in Model)
        {
            <div class="card mb-4 shadow-sm">
                <div class="card-header bg-primary text-white">
                    <div class="d-flex justify-content-between align-items-center">
                        <span>Order Number: @order.OrderId</span>
                        <span>@order.OrderDate.ToString("dd/MM/yyyy hh:mm tt")</span>
                    </div>
                </div>

                <div class="card-body">
                    <h5 class="card-title mb-3">Total Price: @order.TotalAmount</h5>

                    <table class="table table-bordered table-hover">
                        <thead class="table-light">
                            <tr>
                                <th>Name Book</th>
                                <th>Quantity</th>
                                <th>Price</th>
                                <th>Total</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in order.OrderItems)
                            {
                                <tr>
                                    <td>@item.Book.Title</td>
                                    <td>@item.Quantity</td>
                                    <td>@item.Price</td>
                                    <td>@(item.Quantity* item.Price)</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                    <h5 style="color:green">Completed The Order</h5>
                </div>
            </div>
        }
    }
            <div class="text-center mt-3">
                 <a asp-controller="Books" asp-action="index" class="btn btn-dark">Back To List</a>

            </div>
</div>
