@model LoginUserViewModel

@{
    ViewData["Title"] = "Login";
}

<div class="container mt-5">
    <h2 class="mb-4 text-center text-primary">Login</h2>
    <hr />

    <div class="row justify-content-center">
        <div class="col-md-6">
            <form asp-action="Login" method="post" class="shadow p-4 rounded bg-light">
                <div asp-validation-summary="All" class="text-danger mb-3"></div>

                <div class="mb-3">
                    <label asp-for="Name" class="form-label"></label>
                    <input asp-for="Name" class="form-control" placeholder="Enter your username" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Password" class="form-label"></label>
                    <input asp-for="Password" type="password" class="form-control" placeholder="Enter your password" />
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>

                <div class="mb-3 form-check">
                    <input class="form-check-input" asp-for="Rememberme" />
                    <label class="form-check-label" asp-for="Rememberme"></label>
                </div>

                <div class="text-center">
                    <input type="submit" value="Login" class="btn btn-primary w-100" />
                </div>

                <div class="mt-3 text-center">
                    <a asp-action="Register" class="text-decoration-none">Create Account</a>
                </div>
            </form>
        </div>
    </div>
</div>
