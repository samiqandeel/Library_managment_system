@model IEnumerable<Library>

@{
    ViewData["Title"] = "Libraries";
}

<div class="container mt-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="text-primary">All Libraries</h2>
        <a asp-action="Create" class="btn btn-success px-4">
            <i class="bi bi-plus-circle"></i> Create New
        </a>
    </div>

    <div class="card shadow-sm rounded">
        <div class="card-body p-0">
            <table class="table table-striped table-hover mb-0">
                <thead class="table-primary">
                    <tr>
                        <th> Name </th>
                        <th> Address </th>
                        <th class="text-center">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model != null && Model.Any())
                    {
                        foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.Name</td>
                                <td>@item.Address</td>
                                <td class="text-center">
                                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-warning me-2">
                                        <i class="bi bi-pencil-square"></i> Edit
                                    </a>
                                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger me-2">
                                        <i class="bi bi-trash"></i> Delete
                                    </a>
                                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-light">
                                        <i class="bi bi-eye"></i> Details
                                    </a>
                                    <a asp-action="Exist_Book" asp-route-id="@item.Id" class="btn btn-sm btn-dark">
                                        <i class="bi bi-book"></i>  Books
                                    </a>
                                </td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="3" class="text-center text-muted py-4">
                                No libraries found.
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
